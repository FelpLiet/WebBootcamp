<% layout('/layout/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col">
            <img src="<%= campground.image %>" class="img-fluid rounded-start" alt="<%= campground.title %>">
        </div>
        <div class="col">
            <h1><%= campground.title %></h1>
            <p><%= campground.description %></p>
            <p><strong>Location:</strong> <%= campground.location %></p>
            <p><strong>Price:</strong> $<%= campground.price %></p>
            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit</a>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-danger">Delete</button>
            <a href="/campgrounds" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>